{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "pip install",
      "command": "pip install .",
      "dependsOn": []
    },
    {
      "type": "shell",
      "label": "pip install test requirements",
      "command": "pip install -r requirements_test.txt",
      "dependsOn": ["pip install"]
    },
    {
      "type": "shell",
      "label": "pytest",
      "command": "pytest -vv tests",
      "dependsOn": ["pip install test requirements"]
    },
    {
      "type": "shell",
      "label": "pytest coverage",
      "command": "python -m pytest -qq --cov=systembridgedata --cov-report=xml --cov-report=term-missing -o console_output_style=count -p no:sugar tests",
      "dependsOn": ["pip install test requirements"]
    }
  ]
}
